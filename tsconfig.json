{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"module": "commonjs",
		"target": "ES2021",
		"lib": [
			"ES2021"
		],
		"downlevelIteration": true,
		"declaration": true,
		"declarationDir": "./dist",
		"strictPropertyInitialization": false
	},
	"include": [
		"src/**/*.ts",
	]
}